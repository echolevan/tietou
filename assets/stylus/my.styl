.my_line_box {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #ffffff;
}

.my_line_box_online {
  position: relative;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
}

.my_line_box_stroke > .line-t {
  -webkit-animation: stroke .9s;
  animation: stroke .9s;
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

.my_line_box_stroke_reverse > .line-t {
  -webkit-animation: stroke-reverse 0.6s;
  animation: stroke-reverse 0.6s;
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

.my_line_box_online > .line-t {
  -webkit-animation: stroke_online 3s infinite;
  animation: stroke_online 3s infinite;
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

.my_line_box_online > .line-l {
  -webkit-animation: stroke_online 3s infinite;
  animation: stroke_online 3s infinite;
  -webkit-animation-delay: 1.5s;
  animation-delay: 1.5s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

.my_line {
  position: absolute;
  background-color: #555555;
  transform: scale(0, 0);
  opacity: 0;
}

.line-t {
  transform-origin: left;
  width: 100%;
  height: 1px;
  top: 0;
  left: 0;
}

.line-l {
  height: 100%;
  width: 1px;
  bottom: 0;
  left: 0;
  transform-origin: top;
}

@keyframes stroke {
  0% {
    transform: scale(0, 0);
    opacity: 0;
  }
  100% {
    transform: scale(1, 1);
    opacity: 1;
  }
}

@keyframes stroke-reverse {
  0% {
    transform: scale(1, 1);
    opacity: 1;
  }
  100% {
    transform: scale(0, 0);
    opacity: 0;
  }
}

@keyframes stroke_online {
  0% {
    transform: scale(0, 0);
    opacity: 0;
  }
  50% {
    transform: scale(1, 1);
    opacity: 1;
  }
  100% {
    transform: scale(0, 0);
    opacity: 0;
  }
}
